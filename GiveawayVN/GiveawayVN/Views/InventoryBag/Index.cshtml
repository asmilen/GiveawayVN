@model List<GiveawayVN.Models.InventoryItem>

<h2>my Inventory</h2>

<div class="container">
    <input type="button" id="sendmessage" value="Deposit" />
</div>

<div class="row">
    @for (int i = 0; i < Model.Count; i++)
    {
        <div class="col-lg-2 col-sm-3 col-xs-4">
            <img src=@Model[i].image class="thumbnail img-responsive">
            <div class="carousel-caption">
                <h6>@Model[i].commodity</h6>
                <input type="hidden" id="@i" value="@Model[i].id">  
            </div>
        </div>
    } 
</div>
<hr>
<br><br>

@section scripts {
    <!--Script references. -->
    <!--The jQuery library is required and is referenced by default in _Layout.cshtml. -->
    <!--Reference the SignalR library. -->
    <script src="~/Scripts/jquery.signalR-2.2.0.min.js"></script>
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="~/signalr/hubs"></script>
    <!--SignalR script to update the chat page and send messages.-->
    <script>
        $(function () {
            // Reference the auto-generated proxy for the hub.
            var chat = $.connection.chatHub;
            // Start the connection.
            $.connection.hub.start().done(function () {
                $('#sendmessage').click(function () {
                    // Call the Send method on the hub.
                    // Offer message format : SteamID64-token-Item1ID,Item2ID,Item3ID,...
                    var message = "76561198114617015-fIIfymgl-" + $('#1').val() + "," + $('#2').val() + "," + $('#3').val() + "," + $('#4').val();
                    chat.server.send("asmilen",message);
                });
            });
        });
        // This optional function html-encodes messages for display in the page.
        function htmlEncode(value) {
            var encodedValue = $('<div />').text(value).html();
            return encodedValue;
        }
    </script>
}
